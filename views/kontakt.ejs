        /* KONTAKT-HEADER MIT CI-BLAU */
        .contact-header {
            background: #003366;
            padding: 160px 0 80px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        /* ANIMIERTER HINTERGRUND */
        .contact-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(212,175,54,0.1) 0%, transparent 70%);
            animation: pulse 15s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1) rotate(0deg); }
            50% { transform: scale(1.1) rotate(180deg); }
        }
        
        .contact-header h1 {
            font-size: 3rem;
            font-weight: 800;
            color: white;
            margin-bottom: 15px;
            position: relative;
            z-index: 1;
            font-family: 'Outfit', sans-serif;
        }
        
        .contact-header p {
            font-size: 1.2rem;
            color: rgba(255,255,255,0.9);
            position: relative;
            z-index: 1;
            font-family: 'Outfit', sans-serif;
        }
        
        /* TABS STYLING MIT ANIMATION */
        .contact-tabs {
            background: white;
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            position: sticky;
            top: 80px;
            z-index: 99;
        }
        
        .tab-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: center;
            padding: 0;
        }
        
        .tab-btn {
            padding: 25px 35px; /* GRÖSSER */
            background: transparent;
            border: none;
            border-bottom: 3px solid transparent;
            font-weight: 600;
            font-size: 1.1rem; /* GRÖSSERE SCHRIFT */
            cursor: pointer;
            transition: all 0.3s ease;
            color: #333;
            font-family: 'Outfit', sans-serif;
            position: relative;
        }
        
        /* ANIMIERTE UNDERLINE - SCHMALER */
        .tab-btn::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 20%; /* SCHMALER */
            width: 0;
            height: 3px;
            background: #c6a961;
            transition: width 0.3s ease;
        }
        
        .tab-btn:hover::after {
            width: 60%; /* SCHMALER */
        }
        
        .tab-btn.active::after {
            width: 60%; /* SCHMALER */
            animation: slideIn 0.3s ease;
        }
        
        @keyframes slideIn {
            from { width: 0; }
            to { width: 60%; }
        }
        
        .tab-btn:hover {
            color: #c6a961;
            transform: translateY(-2px);
        }
        
        .tab-btn.active {
            color: #c6a961;
        }
        
        /* FORM ANIMATION */
        .contact-form {
            animation: fadeInUp 0.5s ease;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* INPUT FOCUS ANIMATION */
        input:focus, select:focus, textarea:focus {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
