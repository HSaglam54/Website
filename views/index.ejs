        document.getElementById('loader').style.display = 'none';
    } else {
        // Erste Ladung - normaler Loader
        sessionStorage.setItem('pageLoaded', 'true');
        
        // Original Loader Code
        setTimeout(() => {
            document.getElementById('loader').classList.add('fade-out');
            setTimeout(() => {
                document.getElementById('loader').style.display = 'none';
            }, 500);
        }, 1500);
    }
