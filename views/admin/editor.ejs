                console.log('Gespeicherte Daten:', formData);
            }, 1500);
        }
        
        function collectFormData() {
            // Aktiver Tab ermitteln
            const activeTab = document.querySelector('.edit-tab.active').getAttribute('data-tab');
            
            // Datenstruktur erstellen
            const data = {
                activeTab: activeTab,
                home: {
                    hero: {
                        title: document.getElementById('hero-title').value,
                        subtitle: document.getElementById('hero-subtitle').value,
                        buttonText: document.getElementById('hero-button').value
                    },
                    services: {
                        title: document.getElementById('services-title').value,
                        subtitle: document.getElementById('services-subtitle').value,
                        items: []
                    }
                },
                services: {},
                about: {},
                contact: {},
                settings: {}
            };
            
            // Services sammeln
            document.querySelectorAll('#services-container .service-box').forEach((box, index) => {
                data.home.services.items.push({
                    id: index + 1,
                    icon: box.querySelector('.service-icon').value,
                    title: box.querySelector('.service-title').value,
                    description: box.querySelector('.service-description').value
                });
            });
            
            // Je nach aktivem Tab mehr Daten sammeln
            if (activeTab === 'services' || activeTab === 'all') {
                // Leistungsangebote sammeln
                data.services.offers = [];
                document.querySelectorAll('#offers-container .service-box').forEach((box, index) => {
                    data.services.offers.push({
                        id: index + 1,
                        title: box.querySelector('.offer-title').value,
                        price: box.querySelector('.offer-price').value,
                        description: box.querySelector('.offer-description').value
                    });
                });
            }
            
            if (activeTab === 'about' || activeTab === 'all') {
                // Team-Mitglieder sammeln
                data.about.team = [];
                document.querySelectorAll('#team-container .service-box').forEach((box, index) => {
                    data.about.team.push({
                        id: index + 1,
                        name: box.querySelector('.team-name').value,
                        position: box.querySelector('.team-position').value,
                        description: box.querySelector('.team-description').value
                    });
                });
            }
            
            if (activeTab === 'contact' || activeTab === 'all') {
                // Kontaktdaten sammeln
                data.contact = {
                    title: document.getElementById('contact-title').value,
                    intro: document.getElementById('contact-intro').value,
                    phone: document.getElementById('contact-phone').value,
                    mobile: document.getElementById('contact-mobile').value,
                    email: document.getElementById('contact-email').value,
                    locations: []
                };
                
                // Standorte sammeln
                document.querySelectorAll('#locations-container .service-box').forEach((box, index) => {
                    data.contact.locations.push({
                        id: index + 1,
                        title: box.querySelector('.location-title').value,
                        address1: box.querySelector('.location-address1').value,
                        address2: box.querySelector('.location-address2').value,
                        hours: box.querySelector('.location-hours').value,
                        map: box.querySelector('.location-map').value
                    });
                });
            }
            
            if (activeTab === 'settings' || activeTab === 'all') {
                // Einstellungen sammeln
                data.settings = {
                    websiteTitle: document.getElementById('website-title').value,
                    metaDescription: document.getElementById('website-description').value,
                    socialMedia: {
                        facebook: document.getElementById('social-facebook').value,
                        instagram: document.getElementById('social-instagram').value,
                        linkedin: document.getElementById('social-linkedin').value
                    },
                    cookie: {
                        text: document.getElementById('cookie-text').value,
                        buttonText: document.getElementById('cookie-button').value
                    }
                };
            }
            
            return data;
        }
        
